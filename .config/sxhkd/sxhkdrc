# apps
super + shift + {t,d,e,f,c,Escape,s,n}
	{kitty,discord-canary,nemo,firefox,kitty -e nvim,pgrep btop || kitty --class=btop -e btop,spotify,networkmanager_dmenu}

# app launcher
super + space
	dmenu_run_history #-l 6 -c -bw 2 #-p Apps #-g 2

# powermenu
super + x
	powermenu #-l 5 -c -bw 2
# super + x
# 	  powermenu -c -bw 2 -g 4

XF86Tools
	dmenu-fan-control

super + a
	dmenu_window

# clipmenu
super + v
	clipmenu -p clipboard #-c -bw 2 #-l 6

# screenshot
Print
	maimpick

# color picker
ctrl + Print
	farge

# xkill
super + shift + Delete
	xkill

super + Delete
	dmenu-kill-process

# tabbed
super + alt + t
	tabwin add

super + alt + shift + t
	tabwin remove

# media keys
XF86AudioPlay
	playerctl -p spotify play-pause || playerctl play-pause
XF86AudioPrev
	playerctl -p spotify previous || playerctl previous
XF86AudioNext
	playerctl -p spotify next || playerctl next

shift + XF86AudioMute
	playerctl -p spotify play-pause || playerctl play-pause
shift + XF86AudioLowerVolume
	playerctl -p spotify previous || playerctl previous
shift + XF86AudioRaiseVolume
	playerctl -p spotify next || playerctl next

XF86AudioMute
	kitty -e pulsemixer

# brightness keys
# XF86MonBrightness{Up,Down}
# 	brightnessctl s {+5%,5%-}

XF86MonBrightness{Up,Down}
	brillo -{A,U} 4 -u 300000

# caps lock notification
# Caps_Lock
	# ~/.config/dunst/capslock.sh

XF86AudioMicMute
	xdotool key Caps_Lock ; ~/.config/dunst/capslock.sh

