#!/bin/bash

# prompt="dmenu -l 2 -c -bw 2 -g 3"
# prompt="dmenu -l 5 -c -bw 2"
# prompt="dmenu -l 5"
# prompt="dmenu"
prompt="dmenu $@"

option="0\n1\n2\n3\n4\n5\n6\n7\nauto\ndisengaged\nfull-speed"
# echo $option

speed="$(grep level /proc/acpi/ibm/fan | head -n 1 | sed 's/level:		//g')"

select="$(echo -e "$option" | $prompt -p "set fan speed (currently $speed)")"
# select="$(echo -e "$option" | $prompt)"
# echo $select

echo level $select | sudo tee /proc/acpi/ibm/fan
# echo level 1 | sudo tee /proc/acpi/ibm/fan
